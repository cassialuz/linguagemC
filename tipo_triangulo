#include <stdio.h>

int main(){
	
	int lado1,lado2,lado3;
	
	//código 131 da tabela ASCII corresponde ao caractere â
	//código 130 da tabela ASCII corresponde ao caractere é
	//código 160 da tabela ASCII corresponde ao caractere á
	//código 162 da tabela ASCII corresponde ao caractere ó
	
	printf("Digite o primeiro valor do tri%cngulo:\n",131);
	scanf("%d",&lado1);
	
	printf("Digite o segundo valor do tri%cngulo:\n",131);
	scanf("%d",&lado2);
	
	printf("Digite o terceiro valor do tri%cngulo:\n",131);
	scanf("%d",&lado3);
	
	if(lado1 == lado2 && lado1 == lado3){ //aqui todos os lados precisam ser iguais
		printf("O tri%cngulo %c equil%ctero!\n",131,130,160);
	}else if(lado1 == lado2 || lado2 == lado3 || lado1 == lado3){ //aqui 2 lados precisam ser iguais
		printf("O tri%cngulo %c is%csceles!\n",131,130,162);
	}else{
		printf("O tri%cngulo %c escaleno!\n",131,130); //aqui todos os lados são diferentes
	}
}
