#include <stdio.h>

int main(){
	
//Exercicios de Linguagem C: CEFET-PR
//Verificar se o número é par ou ímpar

//código 163 da tabela ASCII corresponde ao caractere ú
//código 130 da tabela ASCII corresponde ao caractere é
//código 161 da tabela ASCII corresponde ao caractere í
	
	int num;
	
	printf("Digite um n%cmero:\n",163);
	scanf("%d",&num);
	
	if(num % 2 == 0){
		printf("N%cmero %c par!\n",163,130);
	}else{
		printf("N%cmero %c %cmpar!\n",163,130,161);
	}
}
